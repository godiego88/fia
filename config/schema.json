{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "run_settings": {
      "type": "object",
      "properties": {
        "dry_run": { "type": "boolean" },
        "live_mode": { "type": "boolean" },
        "dry_limit": { "type": "number" }
      },
      "required": ["dry_run","live_mode","dry_limit"]
    },
    "trigger_thresholds": {
      "type": "object"
    },
    "api": {
      "type": "object"
    },
    "paths": {
      "type": "object",
      "properties": {
        "trigger_context_path": { "type": "string" },
        "deep_results_path": { "type": "string" },
        "reconcile_report_path": { "type": "string" },
        "static_universe": { "type": "array" }
      },
      "required": [
        "trigger_context_path",
        "deep_results_path",
        "reconcile_report_path",
        "static_universe"
      ]
    }
  },
  "required": ["run_settings","paths"]
}
